{
  "name": "a-stats-app",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "build": "esbuild src/App.js --bundle --outfile=public/app.bundle.js --loader:.js=jsx --minify --sourcemap",
    "start": "firebase serve --only hosting",
    "deploy": "firebase deploy --only hosting",
    "dev:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/styles.css --minify"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "firebase": "^10.12.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.23.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
}
